<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarttersstudio.feedbackzone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".ForgotActivity"
            android:label="Reset Password"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".FeedbackListActivity" />
        <activity android:name=".JuniorListActivity" />
        <activity android:name=".ForumActivity" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".CommentActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".ConfirmCreateActivity" />
        <activity android:name=".EditActivity" />
        <activity android:name=".UpdateManagerActivity"></activity>
    </application>

</manifest>