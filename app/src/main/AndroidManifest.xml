<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarttersstudio.feedbackzone">

    <application
        android:name=".offline.MyOffline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".ForgotActivity"
            android:label="Reset Password"/>
        <activity android:name=".ProfileActivity"
            android:label="Profile" />
        <activity android:name=".FeedbackListActivity"
            android:label="All Feedback"/>
        <activity android:name=".JuniorListActivity"
            android:label="View Juniors"/>
        <activity android:name=".ForumActivity"
            android:label="Tech Forum"/>
        <activity android:name=".AddPostActivity"
            android:label="Create Post"
            android:parentActivityName=".ForumActivity"/>
        <activity android:name=".CommentActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity"
            android:label="Register Now"/>
        <activity android:name=".ConfirmCreateActivity"
            android:label="Select Your Manager"/>
        <activity android:name=".EditActivity"
            android:label="Edit Profile"/>
        <activity android:name=".UpdateManagerActivity"
            android:label="Update Your Manager"/>
    </application>

</manifest>