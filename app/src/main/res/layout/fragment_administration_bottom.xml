<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmets.AdministrationBottom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/admin"
            android:elevation="20dp">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_fileName="book_final.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="ADMINISTRATIVE SYSTEM"
            android:fontFamily="@font/alike_angular"
            android:elevation="10dp"
            android:background="#ffffff"
            android:textSize="25sp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:id="@+id/admin_scroll"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/alike_angular"
                                android:text="Does the admin give adequate compensation for overtime duties ?"/>
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/admin_radio_1">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:id="@+id/admin_yes_1"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:layout_marginLeft="30dp"
                                    android:id="@+id/admin_no_1"/>
                            </RadioGroup>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/alike_angular"
                                android:text="Does the admin allow the employees to have a proper work life balance?"/>
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/admin_radio_2">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:id="@+id/admin_yes_2"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:layout_marginLeft="30dp"
                                    android:id="@+id/admin_no_2"/>
                            </RadioGroup>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/alike_angular"
                            android:text="Does the admin take timely action on employ complaints?"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/admin_radio_3">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:id="@+id/admin_yes_3"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:layout_marginLeft="30dp"
                                android:id="@+id/admin_no_3"/>
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/alike_angular"
                            android:text="What  is the one thing you want the administration to Change in the organization?"/>
                        <EditText
                            android:layout_width="300sp"
                            android:textSize="16sp"
                            android:fontFamily="@font/alike_angular"
                            android:layout_height="wrap_content"
                            android:id="@+id/admin_ans"
                            android:hint="Give your answer here"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/alike_angular"
                                android:text="How much you will rate the overall department?"
                                />
                            <android.support.v7.widget.AppCompatRatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/admin_rate"/>
                            <Button
                                android:layout_width="250sp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alike_angular"
                                android:textAllCaps="false"
                                android:textSize="17dp"
                                android:elevation="5dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:layout_margin="15dp"
                                android:background="@color/colorAccent"
                                android:id="@+id/admin_update_button"
                                android:text="Update Rating"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/alike_angular"
                            android:text="Give Feedback"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/alike_angular"
                            android:text="Any suggestions you want to give to make our department even better ?"
                            />
                        <EditText
                            android:layout_width="300sp"
                            android:layout_height="50dp"
                            android:id="@+id/admin_feedback"
                            android:hint="You are free to give any suggestion"/>
                        <Button
                            android:layout_width="250sp"
                            android:layout_height="wrap_content"
                            android:text="Submit Feedback"
                            android:fontFamily="@font/alike_angular"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:elevation="5dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_margin="15dp"
                            android:background="@color/colorAccent"
                            android:id="@+id/admin_submit"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>