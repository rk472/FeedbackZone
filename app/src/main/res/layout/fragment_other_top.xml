<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmets.OtherTop">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:src="@drawable/hrlogo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alike_angular"
            android:layout_height="wrap_content"
            android:text="We have designed an intelligent feedback system. If we have missed any department or you need to suggest anything for our organisation feel free to share here."
            />
    </LinearLayout>


</RelativeLayout>